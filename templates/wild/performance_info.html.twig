{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-4">Performances</h1>

    {% for performance in performances %}

        <div class="card m-5" >
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ performance.poster }}" class="card-img w-100 h-100" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body ">
                        <h5 class="card-title">{{ performance.title }}</h5>
                        <h6 class="card-text text-dark">{{ performance.duration }}h</h6>
                        <p class="card-text text-dark">{{ performance.description }}</p>
                        <p class="card-text text-dark"><small class="text-muted">Last updated 3 mins ago</small></p>
                        <a href="https://www.digitick.com/search?q=cirque" class="btn btn-sm btn-warning ">Booking</a>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

  {{ knp_pagination_render(performances) }}
{% endblock %}