{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mt-4">Performances</h1>

    {% for performance in performances %}

        <div class="card m-5" >
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ performance.poster }}" class="card-img w-100" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ performance.title }}</h5>
                        <h6 class="card-text">{{ performance.duration }}h</h6>
                        <p class="card-text">{{ performance.description }}</p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>



                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}